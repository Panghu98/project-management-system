<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="group.uchain.project_management_system.mapper.UserFormMapper">
    <resultMap id="UserResultMap" type="group.uchain.project_management_system.entity.User">
        <id column="user_id" property="userId" javaType="Long"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="CHAR"/>
        <result column="role" property="role" jdbcType="INTEGER"/>
        <result column="salt" property="salt" jdbcType="CHAR"/>
    </resultMap>
    <insert id="register">
        insert into user values (#{userId},#{username},#{password},#{role},#{salt},#{position},#{office})
    </insert>
    <insert id="registerMultiUser">
        insert into
            user
        values
            <foreach collection="list" item="user" separator=",">
                (
                 #{user.userId},
                 #{user.username},
                 #{user.password},
                 #{user.role},
                 #{user.salt},
                 #{user.position},
                 #{user.office}
                )
            </foreach>
    </insert>
    <update id="updatePassword">
        update user set password=#{param2} where user_id=#{param1}
    </update>
    <select id="selectUserByUserId" resultType="group.uchain.project_management_system.entity.User">
        select user_id as userId,username,salt,`role`,`password` from `user` where user_id = #{id}
    </select>
    <select id="getAllUser" resultType="group.uchain.project_management_system.vo.User">
        select user_id as userId,username,position,office  from user;
    </select>
    <select id="selectUserByHalfUserId" resultType="group.uchain.project_management_system.entity.User">
        select user_id as userId,username,position,office,salt,`role`,`password` from `user` where user_id like (concat('%',#{id},'%'))
    </select>
    <select id="getRepeatUserId" resultType="java.lang.Long">
        select user_id as number
        from user
        where id in
        <foreach collection="list" separator="," index="" item="id" open="(" close=")">
            #{id,jdbcType=VARCHAR}
        </foreach>
    </select>
</mapper>